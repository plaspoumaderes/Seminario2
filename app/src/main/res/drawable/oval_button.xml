<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorPrimary">

    <item>
        <selector>
            <item android:state_selected="true">
                <shape>
                    <corners android:radius="50dp" />
                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp" />
                    <solid android:color="@color/colorPrimary" />
                </shape>
            </item>


            <item android:state_enabled="false">
                <shape>
                    <corners android:radius="50dp" />
                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp" />
                    <solid android:color="@color/colorPrimary" />
                </shape>
            </item>

            <item>
                <shape>
                    <corners android:radius="50dp" />
                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp" />
                    <solid android:color="@color/colorPrimary" />
                </shape>
            </item>
        </selector>
    </item>


</ripple>