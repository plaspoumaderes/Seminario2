<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fr_tab_inicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="6dp"
        android:text="@string/inicio"
        android:textColor="@color/black_letters"
        android:textSize="@dimen/input_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fr_tab_buscar"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/fr_tab_inicio_line"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@color/colorAccent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/fr_tab_inicio"
        app:layout_constraintStart_toStartOf="@+id/fr_tab_inicio" />

    <TextView
        android:id="@+id/fr_tab_buscar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="6dp"
        android:text="@string/buscar"
        android:textColor="@color/black_letters"
        android:textSize="@dimen/input_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fr_tab_inicio" />

    <View
        android:id="@+id/fr_tab_buscar_line"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@color/colorAccent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/fr_tab_buscar"
        app:layout_constraintStart_toStartOf="@+id/fr_tab_buscar" />


</androidx.constraintlayout.widget.ConstraintLayout>