<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_services"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_services_garage_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/black_letters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Garage Name" />

    <TextView
        android:id="@+id/item_services_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_services_garage_name"
        app:layout_constraintTop_toTopOf="@+id/item_services_garage_name"
        tools:text="Parana 1543" />

    <ImageView
        android:id="@+id/item_services_car_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_services_car"
        app:layout_constraintStart_toStartOf="@id/item_services_garage_name"
        app:layout_constraintTop_toTopOf="@+id/item_services_car" />

    <TextView
        android:id="@+id/item_services_car"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_services_day"
        app:layout_constraintStart_toEndOf="@+id/item_services_car_image"
        app:layout_constraintTop_toBottomOf="@+id/item_services_garage_name"
        tools:text="Gol (ABC 123) - Pendiente" />

    <TextView
        android:id="@+id/item_services_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_letters"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_services_car"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_services_car"
        tools:text="22/06 22hs" />

    <TextView
        android:id="@+id/item_services_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:drawableStart="@drawable/circle"
        android:drawableTint="@color/blue_logo"
        android:text="Sin evaluar"
        android:textColor="@color/blue_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/item_services_sep"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
